<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="247dp"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="false"
    app:behavior_peekHeight="125dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/VisibleLayout"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/Highway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:textSize="16sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/MaxSpeed"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:padding="8dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/HardBraking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toLeftOf="@id/SpeedLimitExceeded"
            android:background="@drawable/circle_background"
            android:text="0"
            android:textSize="48dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Hard Braking"
            android:textSize="10sp"
            android:layout_below="@id/HardBraking"
            android:layout_toLeftOf="@id/SpeedLimitExceeded"
            android:textAlignment="center"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/SpeedLimitExceeded"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_background"
            android:text="0"
            android:textSize="48dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Speed Limit Exceeded"
            android:textSize="10sp"
            android:layout_below="@id/SpeedLimitExceeded"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:lines="2"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/DangerousTime"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/SpeedLimitExceeded"
            android:background="@drawable/circle_background"
            android:text="0"
            android:textSize="48dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Dangerous Time"
            android:textSize="10sp"
            android:layout_below="@id/DangerousTime"
            android:layout_toRightOf="@id/SpeedLimitExceeded"
            android:textAlignment="center"
            android:paddingBottom="8dp"/>
    </RelativeLayout>

</LinearLayout>